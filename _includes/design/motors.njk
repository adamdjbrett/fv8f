{% include "partials/header.njk" %}

<section class="container-fluid">
<div class="row justify-content-center text-center">
{% for motor in museum_display %}
<div class="col-md-3 col-6 p-3 p-md-5">
<a href="{{motor.link}}" title="{{motor.title}}"><img class="img-fluid lazy" width="100%" height="100%" alt="{{title}}" data-src="{{motor.image}}"></a>
<div class="mt-3">
<h3><a href="{{motor.link}}" class="text-dark">{{motor.title}}</a></h3>
{% if post.data.author %}
  {% set authorData = post.data.author.split('___') %}
  <p class="text-dark">By 
<img src="{{ authorData[2] }}" class="img_post_profile img-fluid rounded-circle ms-1 me-1"/>
{{ authorData[1] if authorData[1] else authorData[0] }}</p>
{% endif %}
</div>
</div>
{% endfor %}
</div>
</section>
