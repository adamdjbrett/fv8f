{% include "partials/header.njk" %}
<section class="container-fluid">
<div class="row justify-content-center">
<div class="col-md-7 p-3 p-md-5">
<h2>{{description or metadata.description}}</h2>
<heading-anchors>{{content|safe}}</heading-anchors>
</div>
<div class="col-md-5 p-3 p-md-5">
<img class="img-fluid lazy rounder" alt="{{title or metadata.title}}" data-src="{{image or metadata.image}}"/>
<p><a href="{{button.url}}" class="btn btn-primary btn-lg mt-3 col-12"><i class="fas fa-download me-1"></i> {{button.text}}</a></p>
</div>



<div class="container-fluid">
<div class="row">
<div class="col-md-12 p-3 p-md-5">
<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
  <li class="nav-item me-3" role="presentation">
    <button class="nav-link btn btn-primary active" id="pills-adopts-tab" data-bs-toggle="pill" data-bs-target="#pills-adopts" type="button" role="tab" aria-controls="pills-adopts" aria-selected="true">All Vehicles</button>
  </li>
  <li class="nav-item me-3" role="presentation">
    <button class="nav-link btn btn-primary" id="pills-1930-tab" data-bs-toggle="pill" data-bs-target="#pills-1930" type="button" role="tab" aria-controls="pills-1930" aria-selected="true">1930s</button>
  </li>
  <li class="nav-item me-3" role="presentation">
    <button class="nav-link btn btn-primary" id="pills-1940-tab" data-bs-toggle="pill" data-bs-target="#pills-1940" type="button" role="tab" aria-controls="pills-1940" aria-selected="false">1940s</button>
  </li>
  <li class="nav-item me-3" role="presentation">
    <button class="nav-link btn btn-primary" id="pills-1950-tab" data-bs-toggle="pill" data-bs-target="#pills-1950" type="button" role="tab" aria-controls="pills-1950" aria-selected="false">1950s</button>
  </li>
  <li class="nav-item me-3" role="presentation">
    <button class="nav-link btn btn-primary" id="pills-adopted-tab" data-bs-toggle="pill" data-bs-target="#pills-adopted" type="button" role="tab" aria-controls="pills-adopted" aria-selected="false">Adopted Vehicles</button>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">

<div class="tab-pane fade show active" id="pills-adopts" role="tabpanel" aria-labelledby="pills-adopts-tab" tabindex="0">
<div class="row">

{% for post in collections.adopts %}
<div class="p-3 col-md-4 text-center">
<div class="bg-light rounder shadow-sm opacity-95 row zoom non">
<a href="{{post.url}}" title="{{post.data.title}}"><img class="img-fluid lazy img-ev" alt="{{post.data.title}}" data-src="{{post.data.image or metadata.image}}"/></a>
<div class="p-3">
<h3><a href="{{post.url}}" class="text-dark">{{post.data.title}}</a></h3>
{% if post.data.author %}
  {% set authorData = post.data.author.split('___') %}
  <p>By 
<a href="/staff/{{ authorData[0] }}" class="non">
<img src="{{ authorData[2] }}" class="img_post_profile img-fluid rounded-circle ms-1 me-1"/>
{{ authorData[1] if authorData[1] else authorData[0] }}</a></p>
{% endif %}
<p class="text-secondary small"><small>{{post.data.description}}</small></p>
</div>
</div>
</div>
{% endfor %}
</div>
</div>


