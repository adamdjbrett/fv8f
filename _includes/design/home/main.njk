<section class="container-fluid trucks lazy-background" data-bg="{{main_article.background}}">
<div class="row mt-5 mb-5">
<div class="col-md-8 p-3 p-md-5">
<heading-anchors>
{{content|safe}}
</heading-anchors>
<p><a href="{{main_article.button.url}}" class="btn btn-primary">{{main_article.button.text}}</a></p>
</div>
<div class="col-md-4 p-3 p-md-5">
<div class="row text-center">
{% for is in main_article.info %}
<div class="col-6 p-1">
<div class="p-1 shadow-sm bg-light rounder zoom">
<div class="p-3 lit rounders shadow-sm">
<p>
<a href="{{is.url}}" class="non">
<i class="{{is.icon}} fa-2x text-blue"></i><br/>
{{is.text}}
</a>
</p>
</div>
</div>
</div>
{% endfor %}
</div>
</div>

<div class="col-md-12 p-3 p-md-5">
<div class="row">
<h3 class="col-md-2 p-3">{{ticket.title}}: </h3>
<h3 class="col-md-6">
{% for t in ticket.price %}<span class="badge lit text-dark opacity-75 p-3 mt-1 mb-1 me-3">{{t.info}} <span class="badge text-bg-primary ms-3">{{t.price}}</span></span>{% endfor %}
</h3>

<div class="col-md-4">
<div class="border rounder border-dark p-3 shadow-sm">
<p class="text-center"><strong>
<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clock me-1" viewBox="0 0 16 16">
  <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71z"/>
  <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16m7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0"/>
</svg>
Open Hours</strong></p>
<p class="mt-3 p-3"><small>{% for open in metadata.open_hours.info %}<strong>{{open.day}}</strong>: <span class="ms-3">{{open.time}}</span><br/>{% if not loop.last %}{% endif %}{% endfor %}</small></p>
<p class="text-center">
<a href="{{metadata.open_hours.button.url}}" class="btn btn-blue btn-primary col-12">{{metadata.open_hours.button.text}}</a>
</p>
</div>
</div>

</div>


</div>

</section>
