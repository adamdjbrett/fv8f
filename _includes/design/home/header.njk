<header class="container-fluid bb">
<div class="row">
<div class="col-md-11 p-3 p-md-5 mt-5 position-relative">
  <div class="header-content">
    <p class="sub_hero"><a class="text-white" href="{{metadata.url}}">
     {{title}}
    </a>
    </p>
    <h1 class="hero_text">
    {{description}}
    </h1>
  </div>
<!--<img data-src="{{image}}" alt="{{title}}" class="header-image lazy responsive-image ms-3">-->
</div>

<div class="col-md-5 p-3 p-md-5">
<h2>{{header.title}}</h2>
<p class="lead">{{header.text}}</p>
<p>{{header.blockquote}}</p>
</div>
<div class="col-md-7 p-3 p-md-5">
    <div class="slider-container">
        <div class="slide active">
            <img class="shadow-sm img-fluid" src="{{header.image.slider1}}" alt="{{metadata.title}}">
        </div>
        <div class="slide">
            <img  class="lazy shadow-sm responsive-image" data-src="{{header.image.slider2}}" alt="{{description}}">
        </div>
        <div class="slide">
            <img  class="lazy shadow-sm responsive-image" data-src="{{header.image.slider3}}" alt="{{title}}">
        </div>
        
        <button id="prevBtn" class="slider-btn">&#10094;</button>
        <button id="nextBtn" class="slider-btn">&#10095;</button>

        <div class="slider-dots"></div>
    </div>
</div>

<div class="p-3"></div>
</div>
</header>
