{% if show_motors %}<section class="container-fluid">
<div class="row justify-content-center text-center">
<h3 class="p-3 p-md-5 col-md-12">{{metadata.motors.title}}</h3>
{% for motor in metadata.museum_display %}
<div class="col-md-3 col-6 p-3 p-md-5">
<a href="{{motor.link}}" title="{{motor.title}}"><img class="img-fluid lazy" width="100%" height="100%" alt="{{title}}" data-src="{{motor.image}}"></a>
<div class="mt-3">
<h3><a href="{{motor.link}}" class="text-dark">{{motor.title}}</a></h3>
</div>
</div>
{% endfor %}
</div>
</section>{% endif %}
